// EX2 USANDO FILTER METHOD


// para usar um array definido pelo usuário
 let numElements = window.prompt('quantos elementos?')
 let numberArray = [];
 for (y = 0; y < numElements; y++){
     numberArray[y] = window.prompt(`entre o ${y+1}º elemento`);
 }


// tentativa de loop para criar um array customizado pelo usuário
