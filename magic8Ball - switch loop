//criar uma bola mágica que dá previsões aleatórias para perguntas dadas
//pelo usuário

var i = 0
var nome = window.prompt('olá, qual o seu nome?');
var pergunta = window.prompt('Faça sua pergunta, '+nome);

var magicPick = Math.floor(Math.random()*8);

var eightBall = [];

switch (magicPick){
case 0: eightBall = 'Better not tell you now.'
break;
case 1: eightBall = 'Concentrate and ask again.'
break;
case 2: eightBall = 'Cannot predict now'
break;
case 3: eightBall = 'My reply is no.'
break;
case 4: eightBall = 'My sources say no'
break;
case 5: eightBall = 'Outlook not so good'
break;
case 6: eightBall = 'Signs point to yes'
break;
case 7: eightBall = 'Don't count on it'
break;
}
alert(eightBall)
